# Volume keys
bindsym XF86AudioLowerVolume exec amixer -q set Master 2%- unmute && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q set Master toggle && amixer -q set Headphone unmute && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2%+ unmute && pkill -RTMIN+10 i3blocks

bindsym XF86AudioPrev exec mocp --previous && sleep .3 && notify-send "Now playing: $(mocp -Q '%artist - %song')" -t 3000
bindsym XF86AudioPlay exec mocp --toggle-pause
bindsym XF86AudioNext exec mocp --next && sleep .3 && notify-send "Now playing: $(mocp -Q '%artist - %song')" -t 3000

bindsym $mod+F6 exec mpc prev &&  sleep 1 && notify-send "Now playing: $(mocp -Q '%artist - %song')" -t 1000
bindsym $mod+F7 exec mpc toggle
bindsym $mod+F8 exec mpc next &&  sleep 1 && notify-send "Now playing: $(mocp -Q '%artist - %song')" -t 1000

bindsym $mod+F9 exec amixer -q set Master 2%- unmute  && pkill -RTMIN+10 i3blocks
bindsym $mod+F10 exec amixer -q set Master 2%+ unmute && pkill -RTMIN+10 i3blocks
bindsym $mod+F11 exec amixer -q set Master toggle && amixer -q set Headphone unmute && pkill -RTMIN+10 i3blocks

bindsym $mod+Shift+greater move workspace to output right
bindsym $mod+Shift+less move workspace to output left

#hide and show
